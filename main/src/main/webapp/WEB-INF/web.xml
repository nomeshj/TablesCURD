
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <context-param>  
    <param-name>driverName</param-name>  
    <param-value>oracle.jdbc.driver.OracleDriver</param-value>  
  </context-param>
  
  <context-param>  
    <param-name>driverURL</param-name>  
    <param-value>jdbc:oracle:thin:@localhost:1521:xe</param-value>  
  </context-param>
  <context-param>  
    <param-name>username</param-name>  
    <param-value>system</param-value>  
  </context-param>
  <context-param>  
    <param-name>password</param-name>  
    <param-value>system</param-value>  
  </context-param>

  <servlet>
  	<servlet-name>Delete</servlet-name>
  	<display-name>Delete</display-name>
  	<description></description>
  	<servlet-class>com.servlet.Delete</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>index</servlet-name>
  	<display-name>index</display-name>
  	<description></description>
  	<servlet-class>com.servlet.index</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AddForm</servlet-name>
  	<display-name>AddForm</display-name>
  	<description></description>
  	<servlet-class>com.servlet.AddForm</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Add</servlet-name>
  	<display-name>Add</display-name>
  	<description></description>
  	<servlet-class>com.servlet.Add</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Delete</servlet-name>
  	<url-pattern>/Delete</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AddForm</servlet-name>
  	<url-pattern>/AddForm</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>index</servlet-name>
  	<url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Add</servlet-name>
  	<url-pattern>/Add</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
  <welcome-file>index</welcome-file>
  </welcome-file-list>
</web-app>
